@typeparam  Titem

@if(Items is null)
    {
        <p>
            @if (Cargando is null)
            {
                <img
                    alt="Cargando películas"
                    src="https://upload.wikimedia.org/wikipedia/commons/b/b1/Loading_icon.gif?20151024034921"/>
            }
            else
            {
                @Cargando
            }
        </p>
    }
    else if (Items.Count == 0)
    {
        @if (SinRegistros is null)
        {
            <p>No hay películas para mostrar</p>
        }
        else
        {
            @SinRegistros
        }
    }
    else
    {
        foreach (var item in Items)
        {
            @HayRegistros(item)
        }
        
    }

@code {
    [Parameter]
    public RenderFragment Cargando { get; set; } = null!;
    
    [Parameter]
    public RenderFragment SinRegistros { get; set; } = null!;

    [Parameter]
    public RenderFragment<Titem> HayRegistros { get; set; } = null!;
    
    
    [Parameter]
    [EditorRequired]
    public List<Titem> Items { get; set; } = null!;
    
    

}
