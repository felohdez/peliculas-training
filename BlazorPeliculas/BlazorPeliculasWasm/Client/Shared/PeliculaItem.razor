<div>
    <p>
        Título: <strong>@Pelicula.Nombre</strong>

        @if (DateTime.Today.Subtract(Pelicula.FechaLanzamiento).Days <= 14)
        {
            <span style="color:red"> (Reciente)</span>
        }

    </p>
    <p>Fecha de lanzamiento: <strong>@Pelicula.FechaLanzamiento.ToString("dd MMM yyyy")</strong></p>
    
    @if (MostrarBotones)
    {
        <div><button @onclick="@(() => EliminarPelicula.InvokeAsync(Pelicula))" >Borrar película</button></div>
    }
    <hr/>
</div>

@code {

    [Parameter]
    [EditorRequired]
    public Pelicula Pelicula { get; set; } = null!;

    [Parameter]
    public bool MostrarBotones { get; set; } = false;

    [Parameter]
    public EventCallback<Pelicula> EliminarPelicula { get; set; } 


}
